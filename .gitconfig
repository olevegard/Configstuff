[user]
[diff]
   tool = vim
[color]
   diff = auto
   status = auto
   branch = auto
[color "branch"]
   current = yellow reverse
   local = yellow
   remote = green
   upstream = green
[color "diff"]
   meta = yellow bold
   frag = magenta bold
   old = red bold
   new = green bold
[color "status"]
   added = green
   changed = red
   untracked = cyan
[color "interactive"]
   prompt = white
[core]
    editor = vim
[log]
   date=relative
[format]
   pretty = format:%C(yellow)%h %Cblue%>(12)%ad %Cgreen%<(7)%aN%Cred%d %Creset%s
